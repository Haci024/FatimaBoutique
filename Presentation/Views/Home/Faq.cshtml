@model DTO.FrequentlyQuestionsDTO.FrequentlyQuestionListDTO
@{
    ViewBag.Title = "FAQ | Fatimah Boutique";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int i = 0;
}

<!-- Breadcrumb section start -->
<section class="breadcrumb-section section-b-space">
    <ul class="circles">
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
    </ul>
    <div class="container">
        <div class="row">
            <div class="col-12 search-section">
                <h3>Sizdən gələn suallar</h3>
                <div class="search-bar">
                    <div class="input-group search-bar">
                        <input type="search" class="form-control" placeholder="Search">
                        <button class="input-group-text" id="basic-addon3">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb section end -->
<!-- FAQ Section Start -->
<section class="faq-section pt-0">
    <div class="container">
        <div class="row g-lg-5 g-4">
            <div class="col-md-4 zi-1">
                <div class="faq-contain">
                    <div class="faq-image">
                        <img src="~/assets/images/inner-page/faq/guides.png" class="img-fluid blur-up lazyload"
                             alt="">
                    </div>
                    <h2>Kitabça</h2>
                    <h5>Saytdan neçə istifadə etməli olduğunuzu bilmirsinizsə, Bizimlə əlaqə səhifəsindən sualınızı göndərin biz kömək edək!</h5>
                </div>
            </div>

            <div class="col-md-4 zi-1">
                <div class="faq-contain">
                    <div class="faq-image">
                        <img src="~/assets/images/inner-page/faq/faq.png" class="img-fluid blur-up lazyload" alt="">
                    </div>
                    <h2>Teez-tez verilən suallar</h2>
                    <h5>Tez-tez verilən sualları bu səhifədən izliyə bilər və cavabınızı ala bilərsiniz</h5>
                </div>
            </div>

            <div class="col-md-4 zi-1">
                <div class="faq-contain">
                    <div class="faq-image">
                        <img src="~/assets/images/inner-page/faq/community.png" class="img-fluid blur-up lazyload"
                             alt="">
                    </div>
                    <h2>Topluluq</h2>
                    <h5>Bizə qoşulun və son yeniliklərdən xəbərdar olun</h5>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- FAQ Section End -->
<!-- FAQ details start -->
<section class="faq-details section-b-space">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="faq-link-box">
                    <ul>
                        @foreach (var item in Model.FrequentlyQuestions)
                        {
                            <li>
                                <a href="#@i">
                                    <h4>@(i=i+1).</h4>
                                    @* <h5>@item.Question</h5> *@
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-lg-7 col-md-8">

                @foreach (var item in Model.FrequentlyQuestions)
                {
                    <div class="faq-heading" id="@i">
                        <i data-feather="help-circle" class="theme-color"></i>
                        <div class="faq-option">
                            @* <h3>@item.Question?</h3>
                            <h6 class="font-light">
                                @item.Answer
                            </h6> *@
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- FAQ details end -->
<!-- Subscribe Section Start -->
<section class="subscribe-section section-b-space">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="subscribe-details">
                    <h2 class="mb-3">Abunəlik</h2>
                    <h6 class="font-light">
                        Abunə olun və yeniliklərdən xəbərdar olun
                    </h6>
                </div>
            </div>

            <div class="col-lg-6 col-md-6 mt-md-0 mt-3">
                <div class="subsribe-input">
                    <div class="input-group">
                        <input type="email" class="form-control subscribe-input" placeholder="Elektron ünvanınızı daxil edin...">
                        <button class="btn btn-solid-default" type="button">Gönder</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Subscribe Section End -->
