<!-- Breadcrumb section end -->
<!-- FAQ Section Start -->
<section class="faq-section pt-0">
    <div class="container">
        <div class="row g-lg-5 g-4">
            <div class="col-md-4 zi-1">
                <div class="faq-contain">
                    <div class="faq-image">
                        <img src="~/assets/images/inner-page/faq/guides.png" class="img-fluid blur-up lazyload"
                             alt="">
                    </div>
                    <h2>@language.GetKey("Kitabça")</h2>
                    <h5>@language.GetKey("Saytdan neçə istifadə etməli olduğunuzu bilmirsinizsə, Bizimlə əlaqə səhifəsindən sualınızı göndərin biz kömək edək!")</h5>
                </div>
            </div>

            <div class="col-md-4 zi-1">
                <div class="faq-contain">
                    <div class="faq-image">
                        <img src="~/assets/images/inner-page/faq/faq.png" class="img-fluid blur-up lazyload" alt="">
                    </div>
                    <h2>@language.GetKey("Tez-tez verilən suallar")</h2>
                    <h5>@language.GetKey("Tez-tez verilən sualları bu səhifədən izliyə bilər və cavabınızı ala bilərsiniz")</h5>
                </div>
            </div>

            <div class="col-md-4 zi-1">
                <div class="faq-contain">
                    <div class="faq-image">
                        <img src="~/assets/images/inner-page/faq/community.png" class="img-fluid blur-up lazyload"
                             alt="">
                    </div>
                    <h2>@language.GetKey("Topluluq")</h2>
                    <h5>@language.GetKey("Bizə qoşulun və son yeniliklərdən xəbərdar olun")</h5>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="faq-details section-b-space">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
            @foreach (var item in Model)
            {
              
                    <div class="faq-link-box">
                        <ul>
                            <li>
                                <a href="#@item.Id">
                                    <h4>@(i = i + 1)</h4>
                                    <h5>@language.GetKey(item.Question)?</h5>
                                </a>
                            </li>


                        </ul>
                  
                </div>
            }
            </div>
            <div class="col-lg-7 col-md-8">
            @foreach (var item in Model)
            {
              
               

                    <div class="faq-heading" id="@item.Id">
                        <i data-feather="help-circle" class="theme-color"></i>
                        <div class="faq-option">
                            <h3>@language.GetKey(item.Question)</h3>
                            <h6 class="font-light">
                              @language.GetKey(item.Answer)
                            </h6>
                        </div>
                    </div>
                
            }
            </div>
        </div>
    </div>
</section>

