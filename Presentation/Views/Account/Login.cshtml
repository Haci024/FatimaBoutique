@model DTO.UserDTO.LoginUserDTO
@{
    ViewBag.Title = "Giriş | Fatimah Boutique";
    Layout = "~/Views/Shared/_LayoutNoFooterHeader.cshtml";
}

<!-- Log In Section Start -->
<form class="login-section" method="post">
    <div class="materialContainer">
        <div class="box">
            <div class="login-title">
                <h2>Giriş</h2>
            </div>
            <div class="input">
                <label for="name">Elektron ünvan</label>
                <input type="email" asp-for="Email" name="Email" id="name" required>
                <span class="spin"></span>
                <div class="valid-feedback">
                    
                </div>
            </div>

            <div class="input">
                <label for="pass">Şifrə</label>
                <input type="password" asp-for="Password" name="Password" id="pass">
                <span class="spin"></span>
            </div>
            <div asp-validation-summary="ModelOnly" style="color:red"></div>
            <a asp-action="ForgetPassword" class="pass-forgot">Şifrəni unutmusan?</a>

            <div class="button login">
                <button  type="submit">
                    <span>Daxil ol</span>
                   
                </button>
            </div>
            

         

         

            <p>Hesabınız yoxdur? <a asp-action="Register" class="theme-color">Qeydiyyatdan keç </a></p>

        </div>
    </div>
</form>
<!-- Log In Section End -->

