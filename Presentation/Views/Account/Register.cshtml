    <script src="~/back-end/assets/js/bootstrap/bootstrap.bundle.min.js"></script>

    <!-- Theme js -->
    <script src="~/back-end/assets/js/script.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var inputElement = document.getElementById('phoneNum');
            inputElement.addEventListener('input', function (e) {
                var input = e.target;
                if (input.value.length <= 25) { 
                    var formatted = formatTelefon(input.value);
                    input.value = formatted;
                } else {
                    input.value = input.value.slice(0, 25);
                }
            });
        });

        function formatTelefon(numara) {
            var cleaned = ('' + numara).replace(/\D/g, '');
            
            var formatted = cleaned.replace(/(\d{0,3})(\d{0,3})(\d{0,3})(\d{0,3})(\d{0,3})/, function (regex, grup1, grup2, grup3, grup4, grup5) {
                var formattedNumara = '';
                if (grup1) {
                    formattedNumara += '(+' + grup1;
                }
                if (grup2) {
                    formattedNumara += ') ' + grup2;
                }
                if (grup3) {
                    formattedNumara += '-' + grup3;
                }
                if (grup4) {
                    formattedNumara += '-' + grup4;
                }
                if (grup5) {
                    formattedNumara += '-' + grup5;
                }
                return formattedNumara;
            });
            return formatted;
        }
    </script>
