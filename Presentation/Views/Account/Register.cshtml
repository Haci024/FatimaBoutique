@model DTO.UserDTO.RegisterUserDTO
@{
    ViewBag.Title = "Qeydiyyat | Fatimah Boutique";
    Layout = "~/Views/Shared/_LayoutNoFooterHeader.cshtml";
}

<!-- Sign Up Section Start -->
<div class="login-section">
    <div class="materialContainer">

        <form class="box" method="post">
            <div class="login-title">
                <h2>Qeydiyyat</h2>
            </div>

            <div class="input">
                <label for="name">İstifadəçi adı</label>
                <input type="text" asp-for="UserName" name="UserName" id="name">
                <span class="spin"></span>
            </div>

            <div class="input">
                <label for="pass">Elektron ünvan</label>
                <input type="email" asp-for="Email" name="Email" id="pass">
                <span class="spin"></span>
            </div>
            <div class="input">
                <label for="phone">Telefon nömrəsi</label>
                <input type="text" asp-for="PhoneNumber" name="PhoneNumber" id="phone">
                <span class="spin"></span>
            </div>


            <div class="input">
                <label for="compassword">Şifrə</label>
                <input type="password" asp-for="Password" name="Password" id="compassword">
                <span class="spin"></span>
            </div>

            <div class="input">
                <label for="compass">Şifrə təkrarı</label>
                <input type="password" asp-for="ConfirmPassword" name="ConfirmPassword" id="compass">
                <span class="spin"></span>
            </div>
            <div asp-validation-summary="ModelOnly" style="color:red"></div>
            <div class="button login">
                <button type="submit">
                    <span>Qeydiyyat</span>
                    <i class="fa fa-check"></i>
                </button>
            </div>

          
            <p><a asp-action="Login" class="theme-color">Hesabınız var?</a></p>
        </form>
    </div>
</div>
<!-- Sign Up Section End -->

