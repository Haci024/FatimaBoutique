@model IEnumerable<SearchProductDTO>


<ul class="custom-scroll">
    @foreach (var product in Model)
    {
        <li style="position: relative; z-index: 1;">
            <div class="product-cart media" style="margin:30px; position: relative; z-index: 2;">
                <img src="@product.ImageUrl" class="img-fluid blur-up lazyload" alt="@product.ImageUrl" style="width:100px;height:100px; position: relative; z-index: 3;">
                <div class="media-body">
                    <a asp-controller="Shop" asp-action="ProductDetail" asp-route-Id="@product.Id">
                        <h6 class="mb-1">@product.CategoryName</h6>
                        <h6 class="mb-1">@product.Name </h6>
                        <p class="mb-0 mt-1">@product.Price.ToString("0.00") azn</p>
                    </a>
                </div>
            </div>
        </li>
    }
</ul>


 